pipeline {
    agent any
    environment {
        DOCKERHUB = credentials('dockerhub')
        DOCKERURL = "docker.io"
        DOCKERUSR = "jithendar"
        COMPONENT = "user"
    }

    stages {
        
        stage ('Build DKIM user') {
            when {
                triggeredBy 'github'
                 }
            steps {
                sh '''
                tag=$(git tag | xargs -I@ git log --format=format:"%ai @%n" -1 @ | sort -k2 | tail -n 1 | awk '{print $4}')
                docker build -t ${DOCKERURL}/${DOCKERUSR}/${COMPONENT}:$tag .
                '''
                }
                }
        stage ('Push DKIM user') {
            when {
                triggeredBy 'github'
                 }
            steps {
                sh "docker login -u $DOCKERHUB_USR -p $DOCKERHUB_PSW"
                sh '''
                tag=$(git tag | xargs -I@ git log --format=format:"%ai @%n" -1 @ | sort -k2 | tail -n 1 | awk '{print $4}')
                docker push ${DOCKERURL}/${DOCKERUSR}/${COMPONENT}:$tag
                '''
                sh 'docker logout'
                }
              }
        stage ('Create POD with KubeCTL') {
            when {
            anyOf {
                triggeredBy cause: 'UpstreamCause', detail: 'K8s/eks_cluster'
                triggeredBy 'user'
                }
                }
            steps {
                sh '''
                tag=$(git tag | xargs -I@ git log --format=format:"%ai @%n" -1 @ | sort -k2 | tail -n 1 | awk '{print $4}')
                sed -i s/image_tag/$tag/ pod.yml
                '''
                script {
                kubernetesDeploy(configs: "pod.yaml", kubeconfigId: "kubeconfig_deploy")
                }
                }
                }
            }
    post {
        always { 
            cleanWs()
        }
     }
}